{
    "compilerOptions": {
        "module": "umd",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es5",
            "dom",
            "es2015.iterable",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules",
        "bower_components"
    ]
}